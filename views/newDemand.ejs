
<% include partials/header%>



<div class="container">

<h1>post new demand</h1>

<form class="form-horizontal" action="/demand" method="POST">
  <div class="form-group">
    <label for="namee" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="namee" placeholder="Title" name="demand[title]">
    </div>
  </div>
  
  <div class="form-group">
    <label for="phonee" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
    	<textarea class="form-control" id="phonee" placeholder="Description" name="demand[body]">
    	</textarea>
    </div>
  </div>

  <div class="form-group">
    <label for="townn" class="col-sm-2 control-label">Budget</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" id="townn" placeholder="Budget" name="demand[amount]">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>

</form>

</div>


<% include partials/footer%>