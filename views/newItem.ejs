
<%include partials/header%>

<div class="container">

<h1>Sell item</h1>

<form class="form-horizontal" action="/item" method="POST">
  <div class="form-group">
    <label for="namee" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="namee" placeholder="name" name="item[name]">
    </div>
  </div>
  
  <div class="form-group">
    <label for="phonee" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
    	<textarea class="form-control" id="phonee" placeholder="Descibe item.."></textarea>
    </div>
  </div>

  <div class="form-group">
    <label for="townn" class="col-sm-2 control-label">Quantity</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" id="townn" placeholder="quantity" name="item[quantity]">
    </div>
  </div>

  <div class="form-group">
    <label for="statee" class="col-sm-2 control-label">Unit</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="statee" placeholder="Unit" name="item[unit]">
    </div>
  </div>

  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Price</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" id="inputPassword3" placeholder="Price" name="item[price]">
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default btn-primary">sell</button>
    </div>
  </div>

</form>

</div>
<%include partials/footer%>
