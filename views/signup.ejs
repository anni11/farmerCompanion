


<%include partials/header%>

<div class="container">

<h1>signup</h1>

<form class="form-horizontal" action="/signup" method="POST">
  <div class="form-group">
    <label for="namee" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="namee" placeholder="Name" name="user[name]">
    </div>
  </div>
  
  <div class="form-group">
    <label for="phonee" class="col-sm-2 control-label">Phone</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="phonee" placeholder="Phone Number" name="user[phone]">
    </div>
  </div>

  <div class="form-group">
    <label for="townn" class="col-sm-2 control-label">Town</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="townn" placeholder="Town" name="user[town]">
    </div>
  </div>

  <div class="form-group">
    <label for="statee" class="col-sm-2 control-label">State</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="statee" placeholder="State" name="user[state]">
    </div>
  </div>

  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="inputPassword3" placeholder="Password" name="password">
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Register</button>
    </div>
  </div>

</form>

<p>phone number and password can't be edited after form has ben submitted</p>
</div>
<%include partials/footer%>